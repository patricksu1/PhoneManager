<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/holo_blue_bright"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="right"
                android:maxLines="1"

                android:paddingRight="24dip"
                android:textSize="18dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/path_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"

                android:gravity="right"
                android:maxLines="1"
                android:paddingRight="4dip"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:padding="8dip"
        android:scrollbarStyle="outsideInset">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:id="@+id/first_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="casual"
                    android:gravity="left"
                    android:text="Number of folders: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dirs_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="casual"
                    android:gravity="right"
                    android:textStyle="bold" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="8dip" />

            <TableRow>

                <TextView
                    android:id="@+id/second_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="casual"
                    android:gravity="left"
                    android:text="Number of files: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/files_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="casual"
                    android:gravity="right"
                    android:textStyle="bold" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="8dip" />

            <TableRow>

                <TextView
                    android:id="@+id/third_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="casual"
                    android:gravity="left"
                    android:text="Last Modified: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_stamp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="casual"
                    android:gravity="right"
                    android:textStyle="bold" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="25dip" />

            <TableRow>

                <TextView
                    android:id="@+id/fourth_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Total size: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_size"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="casual"
                    android:gravity="right"
                    android:textStyle="bold" />
            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxHeight="8dip" />

            <TableRow>

                <TextView
                    android:id="@+id/fifth_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="casual"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/free_space"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="casual"
                    android:gravity="right"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="Back"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>